#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>
int main(int argc, char* argv[])
{
pid_t pid;

int val = 1;
printf("The value is %d\n", val);
pid = fork();
   if(pid!=0)
   {
       val++;
   }
   else if(pid==0)
   {
       sleep(1);
       val--;
   }
   else
   {
       printf("WTF?");
       return -1;
   }
printf("The value is %d in (%s)\n",val, pid == 0 ? "child" : "parent");
return 0;
}
